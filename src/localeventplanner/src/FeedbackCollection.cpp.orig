#include <iostream>
#include <string>
#include <vector>
#include "LocalEventPlanner.h"
#include "sqlite3.h"

LOCAL_EVENT_PLANNER_API void feedbackCollection() {
    int choice;

    do {
        std::cout << "Feedback Collection:\n";
        std::cout << "1. Gather Feedback\n";
        std::cout << "0. Exit\n";
        std::cout << "Bir secenek secin: ";
        std::cin >> choice;

        switch (choice) {
        case 1:
            gatherFeedback();
            break;

        case 0:
            std::cout << "Cikis yapiliyor...\n";
            break;

        default:
            std::cout << "Gecersiz secim. Lutfen tekrar deneyin.\n";
        }
    } while (choice != 0);
}

LOCAL_EVENT_PLANNER_API void gatherFeedback() {
    std::cout << "Gathering Feedback...\n";
}
