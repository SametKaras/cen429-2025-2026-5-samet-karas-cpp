#include <iostream>
#include <string>
#include <vector>
#include "LocalEventPlanner.h"
#include "sqlite3.h"


LOCAL_EVENT_PLANNER_API void scheduleOrganizer() {
    int choice;

    do {
        std::cout << "Schedule Organizer:\n";
        std::cout << "1. Plan Timelines\n";
        std::cout << "2. Organize Activities\n";
        std::cout << "0. Exit\n";
        std::cout << "Bir secenek secin: ";
        std::cin >> choice;

        switch (choice) {
        case 1:
            planTimelines();
            break;

        case 2:
            organizeActivities();
            break;

        case 0:
            std::cout << "Cikis yapiliyor...\n";
            break;

        default:
            std::cout << "Gecersiz secim. Lutfen tekrar deneyin.\n";
        }
    } while (choice != 0);
}

LOCAL_EVENT_PLANNER_API void planTimelines() {
    std::cout << "Planning Timelines...\n";
}

LOCAL_EVENT_PLANNER_API void organizeActivities() {
    std::cout << "Organizing Activities...\n";
}